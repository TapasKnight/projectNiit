<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_marginTop="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_therapist"
    app:cardCornerRadius="8dp"

    >

    <LinearLayout

        android:id="@+id/therapist_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center|start"
        android:background="#D6D3D3">

        <de.hdodenhof.circleimageview.CircleImageView
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            android:id="@+id/therapist_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/sleep"/>

        <TextView
            android:id="@+id/therapist_name"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#2d2d2d"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#435D80">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/ic_local_phone_black_24dp" />

        <Button

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/ic_email_black_24dp" />


    </LinearLayout>

</ScrollView>