<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#fff">


    <LinearLayout
        android:padding="5dp"
        android:id="@+id/dialog_music"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/music_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music Home"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="90dp"/>
        <TextView

            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Song Name"
            android:textColor="#fff"
            android:layout_marginTop="5dp"

            android:layout_marginBottom="10dp"/>


        <Button
            android:id="@+id/dialog_btnPlay"
            android:paddingLeft="20dp"
            android:paddingRight="35dp"
            android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="Play  Song"
            android:layout_marginTop="10dp"
            />

        <Button

            android:id="@+id/doaalig_btnPause"
            android:paddingLeft="20dp"
            android:paddingRight="35dp"
            android:drawableLeft="@drawable/ic_pause_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="Pause Song"

            />





    </LinearLayout>

    <ImageView
        android:id="@+id/dialod_songImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />



</RelativeLayout>